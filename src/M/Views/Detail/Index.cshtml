@model M.Models.ViewModels.Detail.DetailViewModel
@using M.Utilities.Providers

@section Header {
	<link href="~/css/home.css" rel="stylesheet" />
	<link href="~/css/detail.css" rel="stylesheet" />
	<script src="~/lib/jquery-ui/jquery-ui.js"></script>
	<script src="~/js/detail.js"></script>
}

@{ViewBag.Title = "Поки просто блог"; }

<div class="container content conteiner-side-margin">
	<section id="main">
		@{ var post = Model.Post; }
		<div class="post-image img-responsive">
			<img src="@post.ImageUrl" />
		</div>
		<div class="post-desc">
			<span class="post-title">@post.Title</span>
			<div class="post-short-notes">
				<span class="text-nowrap">
					<i class="fa fa-clock-o" aria-hidden="true"></i>
					@post.PostingTime.Day @MDateFormatsProvider.GetUkrMonth(post.PostingTime) @post.PostingTime.Year<span>р</span> @MDateFormatsProvider.GetUkrTime(post.PostingTime)
				</span>
				&nbsp;
				<span class="text-nowrap">
					<i class="fa fa-comment-o" aria-hidden="true"></i> 5 коментарів
				</span>
			</div>
			<div class="post-wave"><span><br /></span></div>
			<span class="post-info">@Html.Raw(post.Text)</span>
		</div>
		<div class="comments-udel"></div>
		<div class="comments">
			<h3>Коментарі:</h3>
			<br />
			@foreach (var comment in post.Comments) {
				<div class="comment-title-block">
					<span class="comment-email"><i class="fa fa-user" aria-hidden="true"></i> @comment.User.Email</span>
					<span class="comment-date"> <i class="fa fa-clock-o" aria-hidden="true"></i> @comment.CreatedTime.Day  @MDateFormatsProvider.GetUkrMonth(comment.CreatedTime) в @MDateFormatsProvider.GetUkrTime(comment.CreatedTime)</span>
				</div>
				<span class="comment-text">@comment.Text</span>
				<hr />
			}
		</div>
		<div class="comments-udel"></div>
	</section>

	<section id="sitebar">
		<span class="about-me-title">ПРО МЕНЕ</span>
		<hr />
		<div class="img-responsive author-image">
			<img src="~/images/author-image.jpg" />
		</div>
		<span class="about-me-desc">
			<h4><b>TAYLOR WONG</b></h4>
			Architecture Designer
			The Japanese call it Hanakotoba, and King Charles II brought it to Sweden from Persia in the 17th century
		</span>
	</section>
</div>