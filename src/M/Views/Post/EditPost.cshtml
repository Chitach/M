@model M.Models.Post

@section Header {
	<link href="~/css/post.css" rel="stylesheet" />
}
<div class="container content">
	<form id="AddPost" method="post" class="add-post-form" enctype="multipart/form-data">
		<input name="id" id="id" hidden value="@Model.Id" />
		<div class="form-group">
			<label for="Title">Введіть заголовок вашого поста</label>
			<input type="text" class="form-control" id="Title" name="Title" value="@Model.Title">
			<small id="TitleHelp" class="form-text text-muted">Заголовок може передавати тему поста чи його основну думку.</small>
		</div>
		<div class="form-group">
			<label for="Text">Введіть текст вашого поста</label>
			<textarea rows="10" class="form-control" id="Text" name="Text">@Model.Text</textarea>
			<small id="TextHelp" class="form-text text-muted"></small>
		</div>
		<div class="form-group">
			<label for="Image">Вибрати зображення</label>
			<input type="file" id="Image" name="Image" />
		</div>
		<br /><br />
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Зберегти</button>
		</div>
	</form>
</div>