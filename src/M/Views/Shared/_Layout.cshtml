<!DOCTYPE html>

<html>
<head>
	<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<link href="~/css/layout.css" rel="stylesheet" />
	@RenderSection("Header")
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
</head>
<body>
	<nav class="navbar navbar-default def-nav container">
		<!-- Brand and toggle get grouped for better mobile display -->
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>

		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse" id="navbar-collapse-1">
			<div class="nav navbar-nav">
				<div class="nav-item ac-icon" href="#">
					<img class="img-responsive" style="display: inline-block" src="~/images/user-icon.svg" />
					@if (User.Identity.IsAuthenticated) {
						<span>@User.Identity.Name</span>
					}
				</div>
				<div style="display:block">
					<a class="nav-item" style="padding-left:0;" href="@Url.Action("Index", "Home")">Блог</a>
					<a class="nav-item" href="@Url.Action("Index", "AboutAuthor")">Про автора</a>
					<a class="nav-item" href="@Url.Action("Index", "Contacts")">Контакти</a>
					@if (User.Identity.IsAuthenticated) {
						<a class="nav-item" href="@Url.Action("LogOff", "Account")">Вихід</a>
					} else {
						<a class="nav-item" href="@Url.Action("Login", "Account")">Вхід</a>
					}
					<hr />
				</div>
			</div>
		</div><!-- /.navbar-collapse -->
	</nav><!-- /.navbar -->
	<div class="container content">
		@RenderBody()
	</div>
</body>
</html>
